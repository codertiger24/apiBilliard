# ================== APP BASIC ==================
NODE_ENV=development
PORT=3000
TZ=Asia/Ho_Chi_Minh

# Base URL cho link trong QR / e-bill (local)
APP_PUBLIC_BASE_URL=http://localhost:3000

# ================== DATABASE (LOCAL) ==================
# Kết nối MongoDB local, giống log trước đây của bạn: 127.0.0.1/billiard
MONGODB_URI=mongodb://127.0.0.1:27017/billiard
MONGOOSE_DEBUG=false
DB_MAX_POOL_SIZE=20
DB_CONNECT_TIMEOUT_MS=10000

# ================== AUTH / JWT ==================
# Local có thể dùng chuỗi đơn giản, sau này deploy thật nhớ đổi cực mạnh nha
JWT_ACCESS_SECRET=local_access_secret_change_me
JWT_REFRESH_SECRET=local_refresh_secret_change_me
JWT_ACCESS_EXPIRES=30m
JWT_REFRESH_EXPIRES=30d

# Local KHÔNG nên dùng cookie secure (vì chạy http)
COOKIE_SECURE=false

# ================== CORS ==================
# Cho phép frontend local (tuỳ bạn đang dùng port nào, ví dụ React/Vite 5173)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ================== UPLOAD ==================
UPLOAD_DIR=public/uploads
UPLOAD_MAX_FILE_SIZE_MB=5
UPLOAD_MAX_FILES=10
UPLOAD_ALLOW_SVG=false

# ================== LOGGING ==================
LOG_LEVEL=debug
REQUEST_LOG=true

# ================== BACKUP ==================
# Local có thể tắt lịch backup cho đỡ phiền, hoặc để bật cũng được
ENABLE_BACKUP_SCHEDULE=false
BACKUP_CRON=0 3 * * *
BACKUP_MAX_FILES=10

# ================== QR ==================
QR_PUBLIC_DIR=public/qr
